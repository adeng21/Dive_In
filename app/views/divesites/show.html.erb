<div class="row">
  <div class="site-header">
    <h1><%= @divesite.name %></h1>
    <%if @divesite.region != ""%>
    <h3><%= @divesite.region %> <h3>
    <%end%>
    <h3>, <%= @divesite.country%><h3>
  </div>

  <div class="site-attributes">
    <strong> Best Known For:</strong></br>
      <% @divesite.categories.each do |category|%>
      <li class="button"><%=link_to category.name, category_path(category)%></li>
    <%end%></br>

    <strong> Best Month(s) of the Year to Dive:</strong></br>
      <% @divesite.months.each do |month|%>
      <li class="button"><%=link_to month.name, month_path(month)%></li>
    <%end%>
  </div>

  <ul class="orbit-image" data-orbit data-options="animation: slide, timer_speed: 1000;">
    <% @divesite.media.each do |p|%>
    <li><%= image_tag p.image.url.to_s %></li>
    <%end%>
  </ul>

  <p class="text-justify">
    <strong>Description:</strong></br>
    <%= simple_format(@divesite.description) %>
  </p>

  <p class="text-justify">
    <%if @divesite.surrounding_area != ""%>
      <strong>Surrounding Area:</strong></br>
      <%= @divesite.surrounding_area %>
    <%end%>
  </p>

  <ul class="small-block-grid-2">
    <%if @divesite.water_temperature != ""%>
      <li class="text-left">
        <strong>Average Water Temperature:</strong>
        <%= @divesite.water_temperature %>
      </li>
    <%end%>

    <%if @divesite.visibility != ""%>
      <li class="text-right">
        <strong>Average Visibility:</strong>
        <%= @divesite.visibility %>
      </li>
    <%end%>
  </ul>

  <p class="text-center">
    <strong><%= link_to 'See All Reviews', divesite_reviews_path(@divesite)%></strong>
  </p>
</div>





